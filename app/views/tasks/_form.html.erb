<h1> <%= action_name %> </h1>

<%= form_with model: @task, class: "new-task-form" do |f| %>
  <fieldset>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </p>

    <%= f.submit button_title, class: "task-button" %>
  </fieldset>
<% end %>
